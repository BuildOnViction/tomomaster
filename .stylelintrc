{
    'extends': 'stylelint-config-standard',
		'plugins': [
			'stylelint-order'
		],
    'rules': {
		'order/properties-alphabetical-order': true,
        'number-leading-zero': 'never',
        'no-duplicate-selectors': null,
        'no-descending-specificity': null,
        'string-quotes': 'single',
				'at-rule-no-unknown': [
					true,
					'ignoreAtRules': [
						'each',
						'else',
						'extend',
						'for',
						'function',
						'if',
						'include',
						'mixin',
						'return' ]
				]
    }
}
